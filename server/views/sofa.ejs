<% if(sofa != null ) { %>

    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/">Inicio</a></li>
        <li class="breadcrumb-item active" aria-current="page"><%- sofa.name %></li>
      </ol>
    </nav>
  
  
    <div class="row">
  
      <div class="col-12 col-md-4">
        <img src="../uploads/<%- sofa.image %>" class="img-fluid sticky-top" style="top: 20px;" alt="<%- sofa.name %>" loading="lazy">
      </div>
  
      <div class="col-12 col-md-8">
        <div class="row">
          <div class="col-12"><h1><%- sofa.name %></h1></div>
          <div class="col-12 mb-4"><i class="bi bi-tag"></i> <%- sofa.category %></div>
          <div class="col-12" style="white-space: pre-line;">
            <h4> Descrição:</h4>
            <%- sofa.description %>
          </div>
        </div>
  
        <div class="row pt-4">
          <div class="col-12">
            <h4>Composição</h4>
            <ul class="list-group list-group-flush">
              <% sofa.ingredients.forEach(function(ingredients, index){ %>
                <li class="list-group-item"><%= ingredients %></li>
              <% }) %>
            </ul> 
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <p>No item found.</p>
  <% } %>