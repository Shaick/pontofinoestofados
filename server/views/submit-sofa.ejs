<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Enviar novo sofá</h1>
    <div class="col-lg-6 mx-auto">
      <p class="lead">Share your amazing recipies with thousands of web developers accross the world. Fill our form to get started.</p>
    </div>
  </div>
  
  <div class="row justify-content-center">
  
    <% if(infoSubmitObj != '') { %>
      <div class="col-8 alert alert-success" role="alert">
        <%= infoSubmitObj %>
      </div>
    <% } %>
  
    <% if(infoErrorsObj != '') { %>
      <div class="col-8 alert alert-danger" role="alert">
        <%= infoErrorsObj[0].message %>
      </div>
    <% } %>
  
    <div class="col-8">
  
      <form action="/submit-sofa" enctype="multipart/form-data" method="POST">
      
        <div class="row g-3">
   
          <div class="col-12">
            <label for="name" class="form-label">Title</label>
            <input type="text" name="name" id="name" class="form-control" required>
          </div>

          <div class="col-12">
            <label for="cor" class="form-label">Sub Title</label>
            <input type="cor" name="cor" id="cor" class="form-control">
          </div>
          
          <div class="col-12">
            <label for="description" class="form-label">Description</label>
            <textarea name="description" id="description" class="form-control" cols="30" rows="4"></textarea>
          </div>
  
          <div class="col-12">
            <label for="name" class="form-label">Composição</label><br>
            <small>Exemplo = Material: Espuma D28, Couro</small>
            <div class="ingredientList">
              <div class="ingredeintDiv mb-1">
                <input type="text" name="ingredients" class="form-control">
              </div>
            </div>
          </div>
  
          <div class="col-12">
            <button type="button" class="btn btn-outline-primary" id="addIngredientsBtn">+ Caracteristica</button>
          </div>
  
          <div class="col-12">
            <label for="category">Select Category</label>
            <select class="form-select form-control" name="category" aria-label="Category">
              <% if(categories != '') { %>
                <option selected>Select Category</option>
                <% categories.forEach(function(category, index) { %>
                   <option value="<%= category.name  %>"><%= category.name  %> </option> 
                      <% }) %>
                      <% } %> 
            </select>
          </div>
  
          <div class="col-12">
            <label for="image">Imagem</label>
            <input type="file" class="form-control" name="image" accept="image/*">
          </div>
  
          <div class="col-12">
            <button type="submit" class="btn btn-primary">Submit Post</button>
          </div>
  
        </div>
      
      </form>
  
    </div>
  </div>